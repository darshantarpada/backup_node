<h3>{{viewTitle}}</h3>

<form autocomplete="off" action="/employee" method="post">
  <div class="form-group">
    <label for="fullname">Full Name :</label>
    <input type="fullname" class="form-control" id="fullname" name="fullname"> 
  </div>
    <div class="form-group">
    <label for="email">Email:</label>
    <input type="email" class="form-control" id="email" name="email"> 
  </div>
  <div class="form-group">
    <label for="mobile">Mobile:</label>
    <input type="mobile" class="form-control" id="mobile" name="mobile"> 
  </div>
  <div class="form-group">
    <label for="city">City:</label>
    <input type="city" class="form-control" id="city" name="city"> 
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>